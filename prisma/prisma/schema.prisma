datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
  default  = true
}

generator photon {
  provider = "photonjs"
}

model User {
  id           String              @default(cuid()) @id
  createdAt    DateTime            @default(now())
  username     String              @unique
  password     String
  dailyRoutine DailyRoutineEvent[]
  goals        Goal[]
}

model DailyRoutineEvent {
  id        String @default(cuid()) @id
  name      String
  startTime Int
  endTime   Int
  owner     User
}

model Goal {
  id          String   @default(cuid()) @id
  name        String
  date        DateTime
  isCompleted Boolean  @default(false)
  owner       User
}